extends layout

block content
  .ui.last.container
    .ui.three.cards.stackable
      - for( var i = 0; i < data.length; i++ )
        - var tmp = data[i];
        .ui.card
          .content
            .right.floated.meta
              a
                i.remove.circle.outline.icon
            | 您選購的鮮•水果
          .image
            img(src=tmp.url )
          .content
            a.header(href="/detail?item=" + tmp.id )= tmp.title
            .meta
              span.date= tmp.cost
            .description= tmp.info
          .extra.content
          .ui.left.action.input.right
            button.ui.button.red
              | 數量(份)
            input(type='number', min='0', style="width:90px", value="1" )
  .ui.container
    br
    hr
    br
    .ui.segment
      .ui.form
        .two.fields
          .field
            .ui.left.action.input
              button.ui.button.orange.inverted
                i.dollar.icon
                | 總金額
              input(type='number', min='0', value="750"  disabled="true")
          .field
            .ui.left.action.input
              button.ui.button.orange.inverted
                i.dollar.icon
                | 送貨地址
              input(type='text', min='0', placeholder="送到哪裡呢?" )
        .checkout.ui.submit.button.green(style="width:100%") 確定送出

  //- dialog
  #checkout.ui.modal
    .header 訂單送出成功
    .content
      a.ui.button.blue(href="/order") 查看訂單狀況
    include footer

  script(src='/asset/javascripts/cart.js')